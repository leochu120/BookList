@model string[]

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Search Result</h2>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Book Title
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj
                    </td>
                    <td width="30%">
                        <a asp-controller="Book" asp-action="Create" asp-route-id=@obj class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> &nbsp; Add to List
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

