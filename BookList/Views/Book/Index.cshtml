@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Search" class="btn btn-primary">
                <i class="bi bi-search"></i> &nbsp; Search for Book
            </a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Book Title
            </th>
            <th>
                CreatedDate
            </th>
            <th>
                Finished?
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Title
                </td>
                <td width="20%">
                    @obj.CreatedDateTime.ToShortDateString()             
                </td>
                    <td width="20%">
                    @if(obj.stateFinished)
                        {
                            <input class="form-check-input" type="checkbox" checked onclick="return false;">
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" onclick="return false;">
                        }
                    </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                         <a asp-controller="Book" asp-action="edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                         <a asp-controller="Book" asp-action="delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

